<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8F3DC"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Decorative top wave or image background (optional) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/top_wave_green" />

        <!-- Sign In title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1B4332"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Email input -->
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:drawableStart="@drawable/ic_email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#74C69D"
            android:textColor="#1B4332"
            android:textColorHint="#6C757D"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Password input -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableStart="@drawable/ic_lock"
            android:inputType="textPassword"
            android:backgroundTint="#74C69D"
            android:textColor="#1B4332"
            android:textColorHint="#6C757D"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Remember me + Forgot password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/rememberMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textColor="#1B4332"
                android:buttonTint="#74C69D" />

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_marginLeft="95dp"
                android:textColor="#40916C"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Login button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#52B788"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Sign up text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an Account? "
            android:textColor="#1B4332"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#40916C"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</ScrollView>
