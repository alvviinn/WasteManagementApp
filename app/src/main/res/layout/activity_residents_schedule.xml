<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E8F5E9"
    tools:context=".Residents_Schedule">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trash Collection Schedule"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#2E7D32"
    android:layout_margin="30dp"
    android:layout_marginBottom="12dp"/>

    <CalendarView
        android:id="@+id/calendar_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusedMonthDateColor="#388E3C"
        android:weekSeparatorLineColor="#C8E6C9"
        android:weekNumberColor="#1B5E20"
        android:dateTextAppearance="@android:style/TextAppearance.Medium"
        android:selectedWeekBackgroundColor="#A5D6A7"
        android:unfocusedMonthDateColor="#66BB6A"
        android:background="#A5D6A7"/>

    <TextView
        android:id="@+id/tv_selected_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Select a day to view schedule."
        android:textColor="#388E3C"/> <!-- medium green text -->

</LinearLayout>
