<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Residents_Page1">

    <!-- Main content scrollable -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingBottom="98dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/content_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Map snippet card (tap to open full map) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_map_snippet"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- MapView: requires setup in Activity for lifecycle -->
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map_snippet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_gravity="top|end">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/map"
                            android:contentDescription="map icon" />

                        <TextView
                            android:id="@+id/tv_map_snippet_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nearby reports"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Collection Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_collection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/Status_ID"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_status_title"
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="  Collection Status"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_status_icon"
                            android:layout_width="36dp"
                            android:layout_height="32dp"
                            android:contentDescription="status icon"
                            android:src="@drawable/hourglass" />

                        <LinearLayout
                            android:layout_width="328dp"
                            android:layout_height="53dp"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_today_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today: Pending"
                                android:textAppearance="?attr/textAppearanceBody1" />

                            <TextView
                                android:id="@+id/tv_last_and_next"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last: Oct 30, 2025 â€¢ Next: Nov 4, 2025"
                                android:textAppearance="?attr/textAppearanceCaption" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions -->
            <LinearLayout
                android:id="@+id/quick_actions_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_report"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="96dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:id="@+id/Report_ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="report icon"
                            android:src="@drawable/report" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Report" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_schedule"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="96dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:id="@+id/Schedule_ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="schedule icon"
                            android:src="@drawable/schedule" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Schedule" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/action_map"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="96dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:id="@+id/Map_ID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="map icon"
                            android:src="@drawable/map" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Map" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Community Feed Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_feed_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Community Feed"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceSubtitle1" />

                <ImageView
                    android:id="@+id/filter_ID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="more icon"
                    android:src="@drawable/filter" />


            </LinearLayout>

            <!-- Community Feed List -->

            <!-- Offline indicator -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_community_feed"
                android:layout_width="333dp"
                android:layout_height="193dp"
                android:clipToPadding="false"
                android:minHeight="200dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/tv_offline_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:padding="10dp"
                android:background="@drawable/noconnection"
                android:text="You're currently offline. Reports will be sent when you reconnect."
                android:textAppearance="?attr/textAppearanceCaption"
                android:gravity="center" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>

