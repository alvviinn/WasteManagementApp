<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F0D5"
    android:padding="24dp"
    tools:context=".Residents_Report">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Trash / Illegal Dumping"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginTop="16dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculating location..."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <!-- Map View -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#C8E6C9">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_location_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description of issue"
            app:boxStrokeColor="#1B3C2D"
            app:hintTextColor="#000000"
            android:layout_marginTop="20dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Category"
            app:boxStrokeColor="#1B3C2D"
            app:hintTextColor="#000000"
            android:layout_marginTop="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <AutoCompleteTextView
                android:id="@+id/drop_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:textColor="#000000"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Upload Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_upload_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Photo"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#A5D6A7"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_button" />

            <Button
                android:id="@+id/btn_upload_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Video"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#81C784"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:background="@drawable/rounded_button" />
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Report"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="28dp"
            android:backgroundTint="#66BB6A"
            android:padding="14dp"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</ScrollView>
